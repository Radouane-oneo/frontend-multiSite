                    '#weight' => 1,
                ),
                'whole' => array(
                    '#prefix' => '<span class="whole">',
                    '#suffix' => '</span>',
                    '#markup' => $parts[0],
                    '#weight' => 2,
                ),
                'decimalpoint' => array(
                    '#prefix' => '<span class="decimalpoint">',
                    '#suffix' => '</span>',
                    '#markup' => ',',
                    '#weight' => 3,
                ),
                'decimals' => array(
                    '#prefix' => '<span class="decimals">',
                    '#suffix' => '</span>',
                    '#markup' => $parts[1],
